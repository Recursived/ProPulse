// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
        provider = "prisma-client-js"
}

datasource db {
        provider = "postgresql"
        url      = env("DATABASE_URL")
}

model User {
        id        Int         @id @default(autoincrement())
        createdAt DateTime    @default(now())
        email     String      @unique
        firstname String?
        lastname  String?
        scId      Int
        level     SchoolLevel @relation("level", fields: [scId], references: [id])
}

model SchoolLevel {
        id    Int    @id @default(autoincrement())
        label String
        users User[] @relation("level")
}
